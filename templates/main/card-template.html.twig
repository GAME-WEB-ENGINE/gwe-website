<div class="card">
	<div class="card-header">
		<img class="card-header-img-top" src="{{ image }}">
		<span class="badge badge--cat">{{ badge }}</span>
	</div>
	<div class="card-body">
		<h5 class="card-body-title">{{ title }}</h5>
		<span class="card-body-subtitle u-text-muted">@version {{ version }}</span>
		<div class="card-body-text">
			{{ description }}
		</div>
	</div>
	<div class="card-footer">
    <a href="{{ link }}" class="card-footer-btn">Details</a>
	</div>
</div>